{
  "easycom": {
    "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "积分榜"
      }
    },
    {
      "path": "pages/center/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    }, {
      "path": "pages/luckDraw/luckDraw",
      "style": {
        "navigationBarTitleText": "竞猜中心"
      }

    }, {
      "path": "pages/index/driverInfo",
      "style": {
        "navigationBarTitleText": "车手信息",
        "enablePullDownRefresh": false
      }

    }, {
      "path": "pages/index/teamInfo",
      "style": {
        "navigationBarTitleText": "车队详情",
        "enablePullDownRefresh": false
      }

    }, {
      "path": "pages/luckDraw/issues",
      "style": {
        "navigationBarTitleText": "问题列表",
        "enablePullDownRefresh": false
      }

    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uView",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#909399",
    "selectedColor": "#303133",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
      "pagePath": "pages/index/index",
      "iconPath": "static/index.png",
      "selectedIconPath": "static/index-selected.png",
      "text": "积分榜"
    }, {
      "pagePath": "pages/luckDraw/luckDraw",
      "iconPath": "static/index.png",
      "selectedIconPath": "static/index-selected.png",
      "text": "竞猜中心"
    }, {
      "pagePath": "pages/center/index",
      "iconPath": "static/center.png",
      "selectedIconPath": "static/center-selected.png",
      "text": "个人中心"
    }]
  }
}
